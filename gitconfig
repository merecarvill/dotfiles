[alias]
  amend = commit -a --amend
  br = branch
  cbr = "!f() { git branch --merged $1 | grep -v " $1$" | xargs -r git branch -d; }; f main"
  ci = !git add . && git commit -m
  cia = !git add . && git commit --amend --no-edit
  co = checkout
  di = diff
  ec = config --global -e
  lg = log
  p = pull --rebase --prune
  st = status
  undo = reset HEAD^
  wip = !git add . && git commit -m"wip"
[core]
  editor = code --wait
  pager = diff-so-fancy | less --tabs=4 -RFX
[diff]
  tool = vscode-difftool
[difftool "vscode-difftool"]
  cmd = code --wait --diff $LOCAL $REMOTE
[user]
  name = Spencer Carvill
  email = scarvill91@gmail.com
[interactive]
  diffFilter = diff-so-fancy --patch
[color]
  ui = true
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  meta = cyan bold
  frag = magenta bold
  func = 146 bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse
[init]
	defaultBranch = main
